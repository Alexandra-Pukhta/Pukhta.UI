@page
@model Pukhta.UI.Areas.Admin.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление товара</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Category.Id)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="product.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад</a>
    </form>
</div>
}


